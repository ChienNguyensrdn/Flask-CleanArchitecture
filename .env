# UTH Conference Management System - Environment Configuration

# Application
APP_NAME="UTH Conference Management System"
APP_VERSION="1.0.0"
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# Database (SQLite for development - no server required)
DATABASE_URL=sqlite:///./uth_confms.db

# For MySQL, use: mysql+pymysql://root:YOUR_PASSWORD@localhost:3306/uth_confms
# For PostgreSQL, use: postgresql://postgres:postgres@localhost:5432/uth_confms

# JWT Settings
JWT_SECRET_KEY=dev-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=20

# AI Features
AI_ENABLED=false
